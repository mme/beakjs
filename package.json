{
  "name": "beakjs",
  "version": "0.0.4",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "jsonrepair": "^3.2.4",
    "react-textarea-autosize": "^8.4.1",
    "uuid": "^9.0.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^9.0.6",
    "jest": "^29.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vite": "^4.3.5",
    "vite-tsconfig-paths": "^4.2.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "yarn workspace @beakjs/core build && yarn workspace @beakjs/react build",
    "prepublishOnly": "yarn build",
    "serve": "vite preview",
    "test": "jest",
    "sync-versions": "ts-node scripts/sync-versions.ts",
    "clean": "rm -rf dist && rm -rf src/react/dist && rm -rf src/core/dist"
  },
  "jest": {
    "testTimeout": 60000,
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "files": [
    "dist/**/*"
  ],
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/react"
  ]
}
